  <exceptions>
	<!-- Check inside Flight Area, then goto Standby -->
    <exception cond="Or(!InsideGeofence(GetPosX(), GetPosY()), GetPosAlt() @GT GetAltRef() + 120) @AND !(nav_block @LT IndexOfBlock('Start Engine')) @AND !(nav_block @GT IndexOfBlock('land here'))" deroute="Holding point"/>
    <exception cond="(nav_block @GT IndexOfBlock('Standby') @AND nav_block @LT IndexOfBlock('landed'))
    @AND GpsIsLost() @AND delay_test_rc(RadioControlIsLost(),20)" deroute="landed"/>
    <exception cond="(GpsIsLost() @AND (datalink_time @GT 15) @AND nav_block @GT IndexOfBlock('Standby')
                     @AND nav_block @LT IndexOfBlock('landed'))" deroute="Enter_AP_MODE_RC_DIRECT"/>
    <exception cond="((datalink_time @GT 15) @AND nav_block @GT IndexOfBlock('Standby')
                     @AND nav_block @LT IndexOfBlock('landed'))" deroute="Standby"/>
    <exception cond="(delay_test_rc(RadioControlIsLost(),20) @AND nav_block @GT IndexOfBlock('Standby')
                     @AND nav_block @LT IndexOfBlock('descend'))" deroute="land here"/>
  </exceptions>
  <blocks>
    <block name="Enter_AP_MODE_RC_DIRECT">
      <set value="AP_MODE_RC_DIRECT" var="autopilot.mode"/>
      <set value="0" var="force_forward"/>
      <set value="0" var="approach_state"/>
    </block>
    <block name="Wait GPS">
      <set value="0" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <call_once fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <set value="0" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call_once fun="NavSetGroundReferenceHere()"/>
      <!--<call_once fun="NavSetAltitudeReferenceHere()"/>-->
    </block>
    <block name="Holding point">
      <set value="0" var="force_forward"/>
      <set value="0" var="approach_state"/>
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" pre_call="NavKillThrottle()" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <set value="1" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <call_once fun="NavResurrect()"/>
      <stay climb="-0.5" vmode="climb" wp="TD" until="stage_time @GT 0"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <set value="1" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <call_once fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay wp="CLIMB" until="GetPosHeight() @GT 25.0"/>
      <set value="0" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <go wp="STDBY"/>
      <exception cond="task4" deroute="Aruco_hover"/>
      <deroute block="endurance"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <set value="0" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <stay wp="STDBY"/>
    </block>
    <block name="Standby_APP">
      <set value="1" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <stay wp="STDBY"/>
    </block>
    <block name="Aruco_hover">
      <set value="0" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <go wp="ARUCO_HOVER_GUESS"/>
      <set value="1" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <exception cond="wp_dist(WaypointX(WP_ARUCO_HOVER),WaypointY(WP_ARUCO_HOVER),WaypointX(WP_ARUCO_HOVER_GUESS),WaypointY(WP_ARUCO_HOVER_GUESS)) @LT 40.0" deroute="ARUCO_flare"/>
      <stay climb="-1.5" vmode="climb" wp="ARUCO_HOVER_GUESS" until="(GetPosHeight() @LT 10.0)"/>
      <deroute block="Standby"/>
    </block>
    <block name="ARUCO_flare">
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <stay climb="-0.8" vmode="climb" wp="ARUCO_HOVER"/>
      <exception cond="!(GetPosHeight() @GT 1.0)" deroute="ARUCO_flare_low"/>
      <exception cond="agl_dist_valid @AND !(agl_dist_value @GT 0.50)" deroute="ARUCO_flare_low"/>
    </block>
    <block name="ARUCO_flare_low">
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <exception cond="detect_ground_on_landing()" deroute="landed"/>
      <stay climb="-0.5" vmode="climb" wp="ARUCO_HOVER"/>
    </block>
    <block name="endurance">
      <set value="0" var="force_forward"/>
      <set value="0" var="approach_state"/>
      <set value="25.0" var="nav_max_speed"/>
      <set value="25.0" var="nav_goto_max_speed"/>
      <go wp="p1"/>
      <set value="1" var="force_forward"/>
      <set value="0" var="approach_state"/>
      <for var="i" from="1" to="3">
        <go from="p1" hmode="route" wp="p2"/>
        <go from="p2" hmode="route" wp="p3"/>
        <go from="p3" hmode="route" wp="p4"/>
        <go from="p4" hmode="route" wp="p1"/>
      </for>
      <deroute block="prepare mapping"/>
    </block>
    <block name="prepare mapping">
      <set value="0" var="force_forward"/>
      <set value="0" var="approach_state"/>
      <go wp="LAWN1"/>
    </block>
    <block name="mapping">
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <set value="8.0" var="nav_max_speed"/>
      <set value="8.0" var="nav_goto_max_speed"/>
        <go from="LAWN1" hmode="route" wp="LAWN2"/>
        <stay wp="LAWN2" until="wp_dist(WaypointX(WP_LAWN2),WaypointY(WP_LAWN2),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <stay wp="LAWN3" until="wp_dist(WaypointX(WP_LAWN3),WaypointY(WP_LAWN3),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <go from="LAWN3" hmode="route" wp="LAWN4"/>
        <stay wp="LAWN4" until="wp_dist(WaypointX(WP_LAWN4),WaypointY(WP_LAWN4),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <stay wp="LAWN5" until="wp_dist(WaypointX(WP_LAWN5),WaypointY(WP_LAWN5),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <go from="LAWN5" hmode="route" wp="LAWN6"/>
        <stay wp="LAWN6" until="wp_dist(WaypointX(WP_LAWN6),WaypointY(WP_LAWN6),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <stay wp="LAWN7" until="wp_dist(WaypointX(WP_LAWN7),WaypointY(WP_LAWN7),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <go from="LAWN7" hmode="route" wp="LAWN8"/>
        <stay wp="LAWN8" until="wp_dist(WaypointX(WP_LAWN8),WaypointY(WP_LAWN8),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <stay wp="LAWN9" until="wp_dist(WaypointX(WP_LAWN9),WaypointY(WP_LAWN9),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <go from="LAWN9" hmode="route" wp="LAWN10"/>
        <stay wp="LAWN10" until="wp_dist(WaypointX(WP_LAWN10),WaypointY(WP_LAWN10),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <stay wp="LAWN11" until="wp_dist(WaypointX(WP_LAWN11),WaypointY(WP_LAWN11),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
        <go from="LAWN11" hmode="route" wp="LAWN12"/>
      <deroute block="pictures"/>
    </block>
    <block name="pictures">
      <set value="0" var="force_forward"/>
      <set value="0" var="approach_state"/>
      <set value="5.0" var="nav_max_speed"/>
      <set value="5.0" var="nav_goto_max_speed"/>
      <go wp="D1"/>
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <stay wp="D1" until="wp_dist(WaypointX(WP_D1),WaypointY(WP_D1),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
      <stay wp="D2" until="wp_dist(WaypointX(WP_D2),WaypointY(WP_D2),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
      <stay wp="D3" until="wp_dist(WaypointX(WP_D3),WaypointY(WP_D3),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
      <stay wp="D4" until="wp_dist(WaypointX(WP_D4),WaypointY(WP_D4),stateGetPositionEnu_f()->x,stateGetPositionEnu_f()->y) @LT 5.0"/>
      <deroute block="land"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <set value="0" var="approach_state"/>
      <set value="0" var="force_forward"/>
      <call_once fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <set value="0" var="force_forward"/>
      <set value="0" var="approach_state"/>
      <go wp="STDBY"/>
      <go wp="TD"/>
    </block>
    <block name="descend">
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <exception cond="!(GetPosHeight() @GT 12.0)" deroute="flare"/>
      <stay climb="-1.5" vmode="climb" wp="TD"/>
    </block>
    <block name="flare">
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
      <exception cond="!(GetPosHeight() @GT 1.0)" deroute="flare_low"/>
      <exception cond="agl_dist_valid @AND !(agl_dist_value @GT 0.50)" deroute="flare_low"/>
    </block>
    <block name="flare_low">
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <exception cond="detect_ground_on_landing()" deroute="landed"/>
      <stay climb="-0.5" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <set value="0" var="force_forward"/>
      <set value="1" var="approach_state"/>
      <call_once fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
