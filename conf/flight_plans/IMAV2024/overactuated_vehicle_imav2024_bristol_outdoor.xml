<flight_plan alt="35" ground_alt="5" home_mode_height="30" lat0="51.4045325" lon0="-2.8191902" max_dist_from_home="640" name="IMAV2024_Outdoor_Overactuated_Quadplane" qfu="250." security_height="10">
  <header>
    #include "modules/nav/nav_rotorcraft_hybrid.h"
    #include "autopilot.h"
    #include "modules/overactuated_vehicle/overactuated_mixing.h"
    static inline bool delay_test_rc(bool test, int delay) {
      static int nb = 0;
        if (test) {
        nb++;
        if (nb == delay) {
          nb = 0;
          return true;
        }
        return false;
      } else {
        nb = 0;
        return false;
      }
    }
  </header>
