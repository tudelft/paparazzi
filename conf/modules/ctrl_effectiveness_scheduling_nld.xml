<!DOCTYPE module SYSTEM "module.dtd">

<module name="ctrl_effectiveness_scheduling_nld" dir="ctrl">
  <doc>
    <description>
      Interpolation of control effectivenss matrix.
      This is necessary if the vehicle has different operating points,
      with significantly different control effectivenss. 
      
      If instead using online adaptation is an option, be sure to 
      not use this module at the same time!
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="scheduling">
        <dl_setting var="use_scheduling" min="0" step="1" max="1" shortname="enable" persistent="true" module="ctrl/ctrl_effectiveness_scheduling_nld"/>
        <dl_setting var="ce_pitch_a" min="-5.0" step="0.01" max="5" shortname="pitch_a" persistent="true" module="ctrl/ctrl_effectiveness_scheduling_nld"/>
        <dl_setting var="ce_pitch_b" min="0.01" step="0.001" max="0.2" shortname="pitch_b" persistent="true" module="ctrl/ctrl_effectiveness_scheduling_nld"/>
        <dl_setting var="ce_roll_a" min="-3.0" step="0.01" max="5.0" shortname="roll_a" persistent="true" module="ctrl/ctrl_effectiveness_scheduling_nld"/>
        <dl_setting var="ce_roll_b" min="0.0" step="0.001" max="0.2" shortname="roll_b" persistent="true" module="ctrl/ctrl_effectiveness_scheduling_nld"/>
        <dl_setting var="ce_yaw_a" min="-3.0" step="0.01" max="5.0" shortname="yaw_a" persistent="true" module="ctrl/ctrl_effectiveness_scheduling_nld"/>
        <dl_setting var="ce_yaw_b" min="0.0" step="0.001" max="0.2" shortname="yaw_b" persistent="true" module="ctrl/ctrl_effectiveness_scheduling_nld"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="ctrl_effectiveness_scheduling_nld.h"/>
  </header>
  <init fun="ctrl_eff_scheduling_init()"/>
  <periodic fun="ctrl_eff_scheduling_periodic()" freq="100"/>
  <makefile>
    <file name="ctrl_effectiveness_scheduling_nld.c"/>
  </makefile>
</module>
