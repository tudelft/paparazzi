<!DOCTYPE module SYSTEM "module.dtd">

<module name="ctrl_effectiveness_scheduling_rotating_wing_drone" dir="ctrl">
  <doc>
    <description>
      Calculates control effectiveness for rotating wing drone
    </description>
  </doc>
  <settings>
    <dl_settings NAME="crtl_eff_scheduling">
      <dl_settings NAME="eff_sched">
        <dl_setting MAX="1500" MIN="0" STEP="1.0" VAR="rot_wing_thrust_z_limit" shortname="PPRZ CMD limit"/>
        <dl_setting MAX="90" MIN="0" STEP="1.0" VAR="rot_wing_aileron_limit_deg" shortname="angle_limit_ailerons"/>
        <dl_setting MAX="100" MIN="0" STEP="1.0" VAR="rot_wing_roll_prop_limit_deg" shortname="roll_prop_angle_lim"/>
        <dl_setting MAX="100" MIN="0" STEP="1.0" VAR="rot_wing_pitch_prop_limit_deg" shortname="pitch_prop_angle_lim"/>
        <dl_setting MAX="100" MIN="0" STEP="1.0" VAR="rot_wing_yaw_prop_limit_deg" shortname="yaw_prop_angle_lim"/>
        <dl_setting MAX="0.24" MIN="0" STEP="0.001" VAR="rot_wing_min_lift_pitch_eff" shortname="min_lift_pitch_eff"/>
        <dl_setting MAX="0.24" MIN="0" STEP="0.001" VAR="rot_wing_max_lift_pitch_eff" shortname="max_lift_pitch_eff"/>
        <dl_setting MAX="1.0" MIN="0" STEP="0.001" VAR="rot_wing_aero_eff_const_p" shortname="aero_eff_p"/>
        <dl_setting MAX="1.0" MIN="0" STEP="0.001" VAR="rot_wing_aero_eff_const_q" shortname="aero_eff_q"/>
        <dl_setting MAX="1.0" MIN="0" STEP="0.001" VAR="rot_wing_aero_eff_const_r" shortname="aero_eff_r"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="ctrl_effectiveness_scheduling_rotating_wing_drone.h"/>
  </header>
  <init fun="ctrl_eff_scheduling_rotating_wing_drone_init()"/>
  <periodic fun="ctrl_eff_scheduling_rotating_wing_drone_periodic()" freq="20"/>
  <makefile>
    <file name="ctrl_effectiveness_scheduling_rotating_wing_drone.c"/>
  </makefile>
</module>