<!DOCTYPE module SYSTEM "module.dtd">

<module name="nav_snap" dir="nav" task="control">
  <doc>
    <description>Minimum snap Feed-forward hard-coded trajectory</description>
    <section name="SNAP CONTROL" prefix="M_SNAP_">
      <define name="POS_GAIN" value="1.0" description="Position error P-gain"/>
      <define name="SPEED_GAIN" value="2.0" description="Velocity error P-gain"/>
    </section>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="minsnap">
        <dl_setting var="min_snap_track" min="0" step="1" max="2" values="OVAL|OVALCLIMB|EIGHT" module="nav/nav_snap" shortname="traj"/>
        <dl_setting var="min_snap_alpha" min="0.1" step="0.01" max="2" module="nav/nav_snap" shortname="alpha"/>
        <dl_setting var="min_snap_abi" min="0" step="1" max="1" module="nav/nav_snap" shortname="ABI"/>
        <dl_setting var="min_snap_v_ff" min="0.0" step="0.01" max="1" module="nav/nav_snap" shortname="v_ff"/>
        <dl_setting var="min_snap_a_ff" min="0.0" step="0.01" max="1" module="nav/nav_snap" shortname="a_ff"/>
        <dl_setting var="min_snap_pos_gain" min="0.0" step="0.01" max="5.0" module="nav/nav_snap" shortname="kp"/>
        <dl_setting var="min_snap_speed_gain" min="0.0" step="0.01" max="5.0" module="nav/nav_snap" shortname="kd"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="nav_snap.h"/>
  </header>
  <init fun="nav_snap_init()"/>
<!--  <periodic fun="nav_snap_run()" period="0.1" start="nav_snap_init()" autorun="FALSE"/> -->
  <makefile>
    <file name="nav_snap.c"/>
    <file name="trajectories/nms_oval.c"/>
    <file name="trajectories/nms_ovalclimb.c"/>
    <file name="trajectories/nms_eight.c"/>
  </makefile>
</module>

