<!DOCTYPE module SYSTEM "module.dtd">
<module name="random_excitation" dir="random_excitation">
  <doc>
    <description>This module will provide random excitation to each axis in order to make sure also the null space is excited for parameter estimation (online or offline).</description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="RandExcit">
        <dl_setting MAX="1000" MIN="0" STEP="1" VAR="rand_excitation_amp" shortname="amplitude" module="modules/random_excitation/random_excitation"/>
        <dl_setting MAX="3000" MIN="0" STEP="1" VAR="excitation_group1_amp" shortname="group1_amp" module="modules/random_excitation/random_excitation"/>
        <dl_setting MAX="3000" MIN="0" STEP="1" VAR="excitation_group2_amp" shortname="group2_amp" module="modules/random_excitation/random_excitation"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="random_excitation.h"/>
  </header>
  <init fun="random_excitation_init()"/>
  <periodic fun="random_excitation_periodic()" freq="1.0" autorun="TRUE"/>
  <makefile>
    <file name="random_excitation.c"/>
    <define name="RANDOM_EXCITATION_AMPLITUDE" value="500"/>
    <define name="RANDOM_EXCITATION_CUTOFF_FREQUENCY" value="0.25"/>
    <test/>
  </makefile>
</module>
