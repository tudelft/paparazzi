<!DOCTYPE module SYSTEM "module.dtd">

<module name="ctrl_effectiveness_calculator" dir="ctrl">
  <doc>
    <description>
      Function which calculates the control effectiveness matrix on the fly
      depending on the current actuator states.
    </description>
  </doc>
  <settings>
  	<dl_settings>
  		<dl_settings NAME="Mass Properties">
  			<dl_setting var="mass_property.mass" min="0.90" step="0.01" max="1.400" shortname="mass" param="MASS"/>
  			<dl_setting var="mass_property.I_xx" min="0.017897" step="0.001" max="0.06617232" shortname="I_xx" param="I_XX"/>
  			<dl_setting var="mass_property.I_yy" min="0.003390" step="0.001" max="0.04914925" shortname="I_yy" param="I_YY"/>
  			<dl_setting var="mass_property.I_zz" min="0.01752587" step="0.001" max="0.020337" shortname="I_zz" param="I_ZZ"/>
  		</dl_settings>
  	</dl_settings>
  </settings>
  <header>
    <file name="ctrl_effectiveness_calculator.h"/>
  </header>
  <periodic fun="ctrl_eff_periodic()" freq="512"/>
  <makefile>
    <file name="ctrl_effectiveness_calculator.c"/>
  </makefile>
</module>
