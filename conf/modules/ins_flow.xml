<!DOCTYPE module SYSTEM "module.dtd">

<module name="flow" dir="ins">
  <doc>
    <description>
      simple INS and AHRS using flow
    </description>
  </doc>


  <settings>
    <dl_settings NAME="INS">
      <dl_settings name="flow">
        <dl_setting var="reset_filter" min="0" step="1" max="1" values="NO|YES" shortname="reset_filter" module="subsystems/ins/ins_flow"/> 
        <dl_setting var="run_filter" min="0" step="1" max="1" values="NO|YES" shortname="run_filter" module="subsystems/ins/ins_flow"/> 
        <dl_setting var="use_filter" min="0" step="1" max="3" values="NO|ANGLE|VELOCITY|HEIGHT" shortname="use_filter" module="subsystems/ins/ins_flow"/> 
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="ins_flow.h" dir="subsystems/ins"/>
  </header>
  <init fun="ins_flow_init()"/>
  <periodic fun="ins_flow_update()" autorun="TRUE"/>
  <makefile target="ap|nps">
    <!-- FLOW files -->
    <!-- <define name="USE_AHRS"/> -->
    <define name="USE_AHRS_ALIGNER"/>
    <define name="INS_TYPE_H" value="subsystems/ins/ins_flow.h" type="string"/>
    <file name="ins.c" dir="subsystems"/>
    <file name="ins_flow.c" dir="subsystems/ins"/>
    <file name="ahrs_int_cmpl_quat.c" dir="subsystems/ahrs"/>	
    <!-- <file name="ahrs.c" dir="subsystems"/> -->
    <file name="ahrs_aligner.c" dir="subsystems/ahrs"/>
    <!-- <file name="pprz_algebra_float.c" dir="math"/> -->
	<raw>
	$(TARGET).CFLAGS += -DAHRS_TYPE_H=\"subsystems/ins/ins_flow.h\"
	$(TARGET).CFLAGS += -DPRIMARY_AHRS=ahrs_icq
	</raw>
  </makefile>

</module>
