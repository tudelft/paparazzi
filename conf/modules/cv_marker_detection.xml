<!DOCTYPE module SYSTEM "module.dtd">

<module name="cv_marker_detection" dir="computer_vision">

    <doc>
        <description>
            Marker detection module
        </description>
    </doc>

    <settings>
        <dl_settings NAME="Marker Thresholds">

            <!-- Marker detection thresholds -->
            <dl_settings name="cv_marker_detection">
                <dl_setting var="SQRS" min="0" step="1" max="4" shortname="squares"/>
                <dl_setting var="BIN_THRESH" min="0" step="1" max="255" shortname="binary_thresh"/>
                <dl_setting var="ZSCORE" min="0" step="0.1" max="5" shortname="zscore"/>
                <dl_setting var="AREA_THRESH" min="0" step="5" max="3000" shortname="area_thresh"/>

            </dl_settings>
        </dl_settings>
    </settings>

    <depends>video_thread</depends>

    <header>
        <file name="marker/detector.h"/>
    </header>

    <init fun="detector_init()"/>

    <makefile>
        <!-- Main detector -->
        <file name="marker/detector.c"/>

        <file name="blob/blob_finder.c"/>

        <file name="opencv_imav_landingpad.cpp"/>

        <!-- OpenCV compilation requirements -->
        <file name="opencv_image_functions.cpp"/>
        <flag name="CXXFLAGS" value="I$(PAPARAZZI_SRC)/sw/ext/opencv_bebop/install/include"/>
        <flag name="LDFLAGS" value="L$(PAPARAZZI_SRC)/sw/ext/opencv_bebop/install/lib" />
        <flag name="LDFLAGS" value="lopencv_imgcodecs" />
        <flag name="LDFLAGS" value="lopencv_imgproc" />
        <!--<flag name="LDFLAGS" value="lopencv_features2d" />-->
        <!--<flag name="LDFLAGS" value="lopencv_ml" />-->
        <!--<flag name="LDFLAGS" value="lopencv_flann" />-->
        <flag name="LDFLAGS" value="lopencv_core" />
        <flag name="LDFLAGS" value="L$(PAPARAZZI_HOME)/sw/ext/opencv_bebop/install/share/OpenCV/3rdparty/lib" />
        <flag name="LDFLAGS" value="lzlib" />
        <flag name="LDFLAGS" value="llibpng" />
        <flag name="LDFLAGS" value="lstdc++" />
        <flag name="LDFLAGS" value="ldl" />
        <flag name="LDFLAGS" value="lm" />
        <flag name="LDFLAGS" value="lpthread" />
        <flag name="LDFLAGS" value="lrt" />
    </makefile>
</module>


