        <define name="REF_MIN_ZD" value="-2.0"/> <!--climb-->
        <define name="REF_MAX_ZD" value="1.0"/> <!--descend-->
    </section>

    <section PREFIX="GUIDANCE_H_" NAME="GUIDANCE_H">
