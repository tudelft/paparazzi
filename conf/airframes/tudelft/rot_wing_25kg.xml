    <section PREFIX="GUIDANCE_V_" NAME="GUIDANCE_V">
        <define VALUE="310" NAME="HOVER_KP"/>
        <define VALUE="130" NAME="HOVER_KD"/>
        <define VALUE="10" NAME="HOVER_KI"/>
