        <define VALUE="0.85" NAME="REF_ZETA_Q"/>
        <define VALUE="300." UNIT="deg/s" NAME="REF_MAX_Q"/>
        <define VALUE="RadOfDeg(7000.)" NAME="REF_MAX_QDOT"/>
