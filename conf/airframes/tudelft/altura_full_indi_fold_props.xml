    <!-- control effectiveness -->
    <!--<define name="G1_P" value="0.0252103"/>
    <define name="G1_Q" value="0.025197769"/>
    <define name="G1_R" value="0.00184484"/>-->
    <!--<define name="G2_R" value="0.00035358"/>--> <!--Defined in target definition-->

    <!--
            UPPER PART     LOWER PART
            x1   x0        x4   x5
             \  /           \  /
