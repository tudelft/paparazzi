<!-- This is a Octocopter Coaxial frame equiped with
  * Autopilot:  Pixhawk 4
  * IMU:        MPU6000
  * Actuators:  PWM motor controllers
  * GPS:        Ublox
  * RC:         SBUS
  -->

<airframe name="altura_indi">
  <description>Altura with foldable props flying INDI</description>
  <firmware name="rotorcraft">

    <target name="ap" board="px4fmu_5.0_chibios">
      <configure name="PERIODIC_FREQUENCY" value="500"/> <!-- unit="Hz"-->

      <module name="radio_control" type="sbus">
        <define name="RADIO_KILL_SWITCH" value="RADIO_AUX1"/>
        <configure name="SBUS_PORT" value="UART3"/>
      </module>

      <!-- Logger -->
      <module name="tlsf"/>
      <module name="pprzlog"/>
      <module name="logger" type="sd_chibios"/>
      <module name="flight_recorder"/>
      <module name="sys_mon"/>

      <module name="lidar_lite">
        <configure name="LIDAR_LITE_I2C_DEV" value="I2C4"/>
      </module>

      <!--<define name="STABILIZATION_INDI_G2_R" value="0.00035358"/>-->
    </target>

    <target name="nps" board="pc">
      <module name="radio_control" type="datalink"/>
      <module name="fdm" type="jsbsim"/>

      <!--Not dealing with these in the simulation-->
      <define name="RADIO_TH_HOLD"     value="0"/> <!-- Throttle hold in command laws -->
      <define name="RADIO_FMODE"       value="0"/> <!-- Throttle curve select -->
      <define name="RADIO_FBW_MODE"    value="0"/> <!-- Switch between AP and FBW control -->
      <define name="RADIO_FLAPS"       value="0"/> <!-- Flaps control -->
      <define name="RADIO_KILL_SWITCH" value="0"/>

      <!--<define name="STABILIZATION_INDI_G2_R" value="0.0"/>-->
    </target>

    <define name="BAT_CHECKER_DELAY" value="80" />
    <define name="CATASTROPHIC_BATTERY_KILL_DELAY" value="80" />

    <define name="NO_GPS_LOST_WITH_RC_VALID" value="TRUE"/>

    <module name="telemetry" type="transparent">
      <!--<configure name="MODEM_PORT" value="UART3"/>--><!--  Telem2 on pixhawk4 -->
      <!--<configure name="MODEM_PORT" value="UART7"/>--><!--  DebugUart on pixhawk4 -->
      <configure name="MODEM_BAUD" value="B115200"/>
    </module>

    <module name="imu" type="mpu6000">
      <define name="IMU_MPU_CHAN_X" value="1"/>
      <define name="IMU_MPU_CHAN_Y" value="0"/>
      <define name="IMU_MPU_CHAN_Z" value="2"/>
      <define name="IMU_MPU_X_SIGN" value="+1"/>
      <define name="IMU_MPU_Y_SIGN" value="+1"/>
      <define name="IMU_MPU_Z_SIGN" value="-1"/>
      <define name="IMU_MPU_LOWPASS_FILTER" value="MPU60X0_DLPF_42HZ"/>
      <define name="IMU_MPU_SMPLRT_DIV" value="0"/>
      <define name="IMU_MPU_ACCEL_LOWPASS_FILTER" value="MPU60X0_DLPF_ACC_44HZ"/>
    </module>

    <module name="gps" type="ublox" >
      <configure name="GPS_BAUD" value="B57600"/>
    </module>
    <module name="gps" type="ubx_ucenter" />

    <module name="stabilization" type="indi">
      <configure name="INDI_NUM_ACT" value="8"/>
      <define name="INDI_ALLOWED_G_FACTOR" value="1.35"/>
      <define name="INDI_ADAPTIVE_FALLBACK_RC_CHANNEL" value="6"/>
      <define name="INDI_ADAPTIVE_FALLBACK_RC_THRESHOLD" value="0"/>
    </module>

    <!--<module name="ahrs" type="float_cmpl_quat">
      <configure name="USE_MAGNETOMETER" value="TRUE"/>
      <define name="AHRS_USE_GPS_HEADING" value="FALSE"/>
      <define name="AHRS_ICQ_MAG_ID" value="MAG_IST8310_SENDER_ID"/>
    </module>-->

    <module name="ins" type="ekf2">
      <define name="INS_SONAR_MAX_RANGE" value="40.0"/>
    </module>

    <module name="guidance" type="indi">
      <define name="GUIDANCE_INDI_FILTER_CUTOFF" value="1.0"/>
      <define name="GUIDANCE_INDI_POS_GAIN" value="0.2"/>
      <define name="GUIDANCE_INDI_SPEED_GAIN" value="1.0"/>
      <define name="GUIDANCE_INDI_THRUST_DYNAMICS" value="0.023"/>

    </module>

    <module name="current_sensor">
      <configure name="ADC_CURRENT_SENSOR" value="ADC_2" />
    </module>

    <module name="geo_mag"/>
    <module name="send_imu_mag_current" />
    <!--<module name="mag" type="hmc58xx">
      <configure name="MAG_HMC58XX_I2C_DEV" value="i2c1"/>
      <define name="MODULE_HMC58XX_UPDATE_AHRS" value="TRUE"/>
      <define name="HMC58XX_CHAN_X" value="1"/>
      <define name="HMC58XX_CHAN_Y" value="0"/>
      <define name="HMC58XX_CHAN_Z" value="2"/>
      <define name="HMC58XX_CHAN_X_SIGN" value="+"/>
      <define name="HMC58XX_CHAN_Y_SIGN" value="+"/>
      <define name="HMC58XX_CHAN_Z_SIGN" value="-"/>
    </module>-->
    <!-- Magenetometer in external GPS module-->
    <module name="mag_lis3mdl">
      <define name="MODULE_LIS3MDL_UPDATE_AHRS" value="TRUE"/>
      <configure name="MAG_LIS3MDL_I2C_DEV" value="I2C1"/>
      <define name="LIS3MDL_CHAN_X_SIGN" value="-"/>
      <define name="LIS3MDL_CHAN_Y_SIGN" value="+"/>
      <define name="LIS3MDL_CHAN_Z_SIGN" value="-"/>
    </module>

    <!--<module name="motor_mixing"/>-->

    <module name="actuators" type="pwm">
      <define name="SERVO_HZ" value="400"/>
    </module>

    <module name="random_excitation">
      <define name="RANDOM_EXCITATION_GROUP1" value="{0,1,2,3}"/>
      <define name="RANDOM_EXCITATION_GROUP2" value="{4,5,6,7}"/>
    </module>
    <module name="sys_id_chirp_full_indi">
      <define name="CHIRP_ENABLED" value="TRUE"/>
    </module>

    <!-- To get the signs (and channels) right, show a realtime plot scaled IMU_MAG mx, my, mz then:
    - [x] When you align your IMU with the direction of north, you should see x>0, y=~0, z>0.
    - [x] When pitching the IMU down, the magnetic vector is aligning with x,
          so x should increase and z should decrease to zero.
    - [x] If yawing your IMU to the left, the magnetic vector is aligning with y,
          so y should be positive and increase, x should decrease to zero and z stay positive.
    -->

  </firmware>

  <commands>
    <axis name="PITCH" failsafe_value="0"/>
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="YAW" failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="0"/>
  </commands>

  <rc_commands>
    <set command="THRUST" value="@THROTTLE"/>
    <set command="ROLL" value="@ROLL"/>
    <set command="PITCH" value="@PITCH"/>
    <set command="YAW" value="@YAW"/>
  </rc_commands>

  <servos driver="Default">
    <servo name="MOTOR_0" no="0" min="1000" neutral="1100" max="2000"/>
    <servo name="MOTOR_1" no="1" min="1000" neutral="1100" max="2000"/>
    <servo name="MOTOR_2" no="2" min="1000" neutral="1100" max="2000"/>
    <servo name="MOTOR_3" no="3" min="1000" neutral="1100" max="2000"/>
    <servo name="MOTOR_4" no="4" min="1000" neutral="1100" max="2000"/>
    <servo name="MOTOR_5" no="5" min="1000" neutral="1100" max="2000"/>
    <servo name="MOTOR_6" no="6" min="1000" neutral="1100" max="2000"/>
    <servo name="MOTOR_7" no="7" min="1000" neutral="1100" max="2000"/>
  </servos>

  <command_laws>
    <set servo="MOTOR_0" value="autopilot_get_motors_on() ? actuators_pprz[0] : -MAX_PPRZ"/>
    <set servo="MOTOR_1" value="autopilot_get_motors_on() ? actuators_pprz[1] : -MAX_PPRZ"/>
    <set servo="MOTOR_2" value="autopilot_get_motors_on() ? actuators_pprz[2] : -MAX_PPRZ"/>
    <set servo="MOTOR_3" value="autopilot_get_motors_on() ? actuators_pprz[3] : -MAX_PPRZ"/>
    <set servo="MOTOR_4" value="autopilot_get_motors_on() ? actuators_pprz[4] : -MAX_PPRZ"/>
    <set servo="MOTOR_5" value="autopilot_get_motors_on() ? actuators_pprz[5] : -MAX_PPRZ"/>
    <set servo="MOTOR_6" value="autopilot_get_motors_on() ? actuators_pprz[6] : -MAX_PPRZ"/>
    <set servo="MOTOR_7" value="autopilot_get_motors_on() ? actuators_pprz[7] : -MAX_PPRZ"/>
  </command_laws>

  <section name="IMU" prefix="IMU_">
    <!-- replace this with your own calibration -->
    <define name="ACCEL_X_NEUTRAL" value="-294"/>
    <define name="ACCEL_Y_NEUTRAL" value="44"/>
    <define name="ACCEL_Z_NEUTRAL" value="-12"/>
    <define name="ACCEL_X_SENS" value="4.591104640971387" integer="16"/>
    <define name="ACCEL_Y_SENS" value="4.890830945582647" integer="16"/>
    <define name="ACCEL_Z_SENS" value="4.824469415606894" integer="16"/>


    <!--Calibrated outside, based on sw/tools/calibration/calibrate.py -s MAG var/logs/16_12_05__16_32_21.data -vp -->
    <define name="MAG_X_NEUTRAL" value="-5"/>
    <define name="MAG_Y_NEUTRAL" value="-18"/>
    <define name="MAG_Z_NEUTRAL" value="-9"/>
    <define name="MAG_X_SENS" value="12.564703608820938" integer="16"/>
    <define name="MAG_Y_SENS" value="12.873199189575105" integer="16"/>
    <define name="MAG_Z_SENS" value="13.31088565961852" integer="16"/>


  </section>

  <!-- local magnetic field -->
  <!-- http://wiki.paparazziuav.org/wiki/Subsystem/ahrs#Local_Magnetic_Field -->
  <section name="AHRS" prefix="AHRS_">
    <!-- values used if no GPS fix, on 3D fix is update by geo_mag module -->
    <!-- Toulouse -->
    <!--define name="H_X" value="0.513081"/>
    <define name="H_Y" value="-0.00242783"/>
    <define name="H_Z" value="0.858336"/-->
    <!-- Delft -->
    <define name="H_X" value="0.3892503"/>
    <define name="H_Y" value="0.0017972"/>
    <define name="H_Z" value="0.9211303"/>

    <!-- For vibrating airfames -->
    <define name="GRAVITY_HEURISTIC_FACTOR" value="0"/>
  </section>

  <section name="ATTITUDE_REFERENCE" prefix="STABILIZATION_ATTITUDE_">
    <!-- setpoints -->
    <define name="SP_MAX_PHI" value="25" unit="deg"/>
    <define name="SP_MAX_THETA" value="25" unit="deg"/>
    <define name="SP_MAX_R" value="45" unit="deg/s"/>
    <define name="DEADBAND_A" value="2"/>
    <define name="DEADBAND_E" value="2"/>
    <define name="DEADBAND_R" value="50"/>

    <!-- reference -->
    <define name="REF_OMEGA_P" value="450" unit="deg/s"/>
    <define name="REF_ZETA_P" value="0.9"/>
    <define name="REF_MAX_P" value="600." unit="deg/s"/>
    <define name="REF_MAX_PDOT" value="RadOfDeg(8000.)"/>

    <define name="REF_OMEGA_Q" value="450" unit="deg/s"/>
    <define name="REF_ZETA_Q" value="0.9"/>
    <define name="REF_MAX_Q" value="600." unit="deg/s"/>
    <define name="REF_MAX_QDOT" value="RadOfDeg(8000.)"/>

    <define name="REF_OMEGA_R" value="200" unit="deg/s"/>
    <define name="REF_ZETA_R" value="0.9"/>
    <define name="REF_MAX_R" value="300." unit="deg/s"/>
    <define name="REF_MAX_RDOT" value="RadOfDeg(4000.)"/>
  </section>

