  </section>

  <section name="NAVIGATION" prefix="NAV_">
    <define name="CLIMB_VSPEED" value="2.0"/>
    <define name="DESCEND_VSPEED" value="-1.0"/>
  </section>

  <section name="SIMULATOR" prefix="NPS_">
    <define name="ACTUATOR_NAMES" value="neu_motor,nwu_motor,swu_motor,seu_motor,nwl_motor,nel_motor,sel_motor,swl_motor" type="string[]"/>
    <define name="JSBSIM_MODEL" value="Altura" type="string"/>
