        <define name="SPEED_GAINZ" value="1.0"/> <!--tuned at 10m/s ///2.1 2.4-->
        <define name="FILTER_CUTOFF" value="2.5"/>
        <define name="HEADING_BANK_GAIN" value="5."/>
        <define name="MAX_AIRSPEED" value="10.0"/>
