<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<airframe name="flamewheel_indi">
  <description>?
  </description>

  <firmware name="rotorcraft">
    <target name="ap" board="px4fmu_5.0_chibios">
      <configure name="PERIODIC_FREQUENCY"  value="500"/>
      <define name="SYS_TIME_FREQUENCY"  value="1000"/>
      <define name="CH_CFG_ST_FREQUENCY"  value="100000"/>
      <!--<configure name="FLASH_MODE" value="SWD"/>-->
      <configure name="FLASH_MODE" value="PX4_BOOTLOADER"/>

      <module name="radio_control" type="sbus">
        <configure name="SBUS_PORT" value="UART3"/>
      </module>

      <define name="INDI_RPM_FEEDBACK" value="FALSE"/>
      <!-- Logger -->
      <module name="tlsf"/>
      <module name="pprzlog"/>
      <module name="logger" type="sd_chibios"/>
      <module name="flight_recorder"/>
      <module name="logger" type="control_effectiveness"/>

      <define name="SDLOG_AUTO_FLUSH_PERIOD" value="1" unit="s"/>
      <define name="SDLOG_START_DELAY" value="5" unit="s"/>
      <define name="SDLOG_CONTIGUOUS_STORAGE_MEM" value="50" unit="Mo"/>

      <!--<module name="scheduling_indi_simple"/>-->

      <define name="ADC_CURRENT_DISABLE" value="TRUE"/>

      <define name="RADIO_TH_HOLD"     value="RADIO_AUX1"/> <!-- Throttle hold in command laws -->
      <define name="RADIO_FMODE"       value="RADIO_AUX2"/> <!-- Throttle curve select -->
      <define name="RADIO_FBW_MODE"    value="RADIO_AUX3"/> <!-- Switch between AP and FBW control -->
      <define name="RADIO_KILL_SWITCH" value="RADIO_AUX1"/>

      <define name="IMU_BODY_TO_IMU_PSI" value="3.1415"/> <!-- must be a bug, but this is correct unit -->
      
    </target>

    <target name="nps" board="pc">
      <module name="radio_control" type="datalink"/>
      <module name="fdm" type="jsbsim"/>
      <module name="udp"/>
      <define name="INDI_RPM_FEEDBACK" value="FALSE"/>
      <module name="logger_file">
        <define name="FILE_LOGGER_PATH" value="/home/tblaha/Documents"/>
      </module>
      <configure name="OPT" value="0"/>
      <define name="IMU_BODY_TO_IMU_PSI" value="0."/> <!-- must be a bug, but this is correct unit -->
    </target>

    <!--define name="USE_SONAR" value="TRUE"/-->

