  <commands>
    <axis name="PITCH" failsafe_value="0"/>
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="YAW" failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="6000"/>
  </commands>

  <servos driver="Pwm">
    <servo name="FRONT_RIGHT" no="0" min="1000" neutral="1150" max="2000"/>
    <servo name="MIDDLE_RIGHT" no="1" min="1000" neutral="1150" max="2000"/>
    <servo name="REAR_RIGHT" no="2" min="1000" neutral="1150" max="2000"/>
    <servo name="REAR_LEFT" no="3" min="1000" neutral="1150" max="2000"/>
    <servo name="MIDDLE_LEFT" no="4" min="1000" neutral="1150" max="2000"/>
    <servo name="FRONT_LEFT" no="5" min="1000" neutral="1150" max="2000"/>
  </servos>

  <command_laws>
    <set servo="FRONT_RIGHT"   value="autopilot_get_motors_on() ? actuators_pprz[0] : -MAX_PPRZ"/>
    <set servo="MIDDLE_RIGHT"  value="autopilot_get_motors_on() ? actuators_pprz[1] : -MAX_PPRZ"/>
    <set servo="REAR_RIGHT"    value="autopilot_get_motors_on() ? actuators_pprz[2] : -MAX_PPRZ"/>
    <set servo="REAR_LEFT"     value="autopilot_get_motors_on() ? actuators_pprz[3] : -MAX_PPRZ"/>
    <set servo="MIDDLE_LEFT"   value="autopilot_get_motors_on() ? actuators_pprz[4] : -MAX_PPRZ"/>
    <set servo="FRONT_LEFT"    value="autopilot_get_motors_on() ? actuators_pprz[5] : -MAX_PPRZ"/>
