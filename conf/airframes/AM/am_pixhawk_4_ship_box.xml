      <define name="USE_BARO_BOARD" value="1"/>

<!--      <module name="radio_control" type="ppm"/>-->

      <module name="radio_control" type="sbus"> <!-- The output type of RX, over the air it can be all kinds e.g. DSMX, FRSky-->
        <define name="RADIO_CONTROL_NB_CHANNEL" value="16"/>  <!-- Set the OpenRXSR receiver to maximum channel output of 8 9ms -->
        <configure name="SBUS_PORT" value="UART3"/>  <!--Default use UART2  on FMU4 -->
        <define name="RADIO_AUX1" value="5"/>
        <define name="RADIO_GEAR" value="RADIO_AUX2"/>
        <define name="RADIO_FLAP" value="RADIO_AUX3"/>
      </module>

